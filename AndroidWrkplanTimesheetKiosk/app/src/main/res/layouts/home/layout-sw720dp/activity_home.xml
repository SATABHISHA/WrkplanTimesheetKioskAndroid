    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ImageView
            android:id="@+id/imgview_btn_profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/layout6"
            android:textColor="#000000">
            <TextView
                android:id="@+id/tv_rcognize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:gravity="center"
                android:text="Recognize Me"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:fitsSystemWindows="true"
                android:adjustViewBounds="true"
                android:src="@drawable/kiosklogo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:text="Version 1.2022.05.22"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:text="Copyright Â© ARB Investments Company, LLC"
                android:layout_gravity="center"
                android:textColor="#3E3D3D"
                android:textSize="24sp"/>
        </LinearLayout>
    </RelativeLayout>
