    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <TextView
            android:id="@+id/tv_empname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            android:text="Hello\n Bhattachraya, Achintya"/>
        <LinearLayout
            android:id="@+id/ll_headlines"
            android:layout_below="@id/tv_empname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="23dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_child1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#4f4f4f"
                    android:text="Employee ID"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_emp_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="33"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_child2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#4f4f4f"
                    android:text="Supervisor 1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_supervisor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="a,b"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_child3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#4f4f4f"
                    android:text="Supervisor 2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4f4f4f"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_supervisor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_below="@id/ll_headlines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_punch_in"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/layout6">
                <TextView
                    android:id="@+id/tv_punchtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                    android:textColor="#4f4f4f"
                    android:text="Punch"/>
                <TextView
                    android:id="@+id/tv_punchtitle2"
                    android:layout_below="@id/tv_punchtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="22sp"
                    android:textColor="#4f4f4f"
                    android:text="IN"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_break_punchout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rl_break"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout6"
                    android:layout_marginRight="17dp"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_breaktitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="13sp"
                        android:textColor="#4f4f4f"
                        android:text="Take a"/>
                    <TextView
                        android:id="@+id/tv_breaktitle2"
                        android:layout_below="@id/tv_breaktitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="22sp"
                        android:textColor="#4f4f4f"
                        android:text="BREAK"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_punch_out"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout6"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:layout_marginLeft="17dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_punch_out_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="13sp"
                        android:textColor="#4f4f4f"
                        android:text="Punch"/>
                    <TextView
                        android:id="@+id/tv_punch_out_title2"
                        android:layout_below="@id/tv_punch_out_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="22sp"
                        android:textColor="#4f4f4f"
                        android:text="OUT"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_view_select_task"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="visible"
                android:focusableInTouchMode="true"
                android:background="@drawable/layout6">
                <TextView
                    android:id="@+id/tv_view_select_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="22sp"
                    android:textColor="#4f4f4f"
                    android:text="View / Select / Switch Task"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_view_leave_balance"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/layout6">
                <TextView
                    android:id="@+id/tv_view_leave_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="#4f4f4f"
                    android:text="View Leave Balance"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_cancel"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/layout6">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="22sp"
                    android:textColor="#4f4f4f"
                    android:text="Cancel"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>